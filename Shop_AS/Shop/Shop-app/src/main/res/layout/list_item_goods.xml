<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <RelativeLayout
        android:id="@+id/fl_shop_cart_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/img_cart_good_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:background="#F5F5F5"
        android:descendantFocusability="afterDescendants"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <!-- 菜名 -->

            <TextView
                android:id="@+id/tv_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="原味石锅"
                android:textColor="@color/text_color_normal"
                android:textSize="16sp"
                android:typeface="monospace" />

            <!-- 价格 -->
            <TextView
                android:id="@+id/tv_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="￥9.0"
                android:textColor="@color/bg_color_first"
                android:textSize="14sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_buy_good"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_bg_btn"
            android:clickable="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/text_btn_buy"
            android:textColor="@color/text_color_white"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_item"
        android:background="@color/bg_color_second"/>

</RelativeLayout>