<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    
    <TextView 
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_item"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text_color_normal"
        android:typeface="monospace"
        android:text="检查更新"/>
    
    <TextView 
        android:id="@+id/tv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_radius_square_color_main"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/tv_item_name"
        android:layout_alignBottom="@id/tv_item_name"
        android:layout_toRightOf="@id/tv_item_name"
        android:textSize="14sp"
        android:text="new"
        android:textColor="@color/text_color_white"
        />

</RelativeLayout>
