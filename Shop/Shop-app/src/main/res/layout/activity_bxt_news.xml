<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F3"
    android:scrollbars="none"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_bxt_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="120dp"
                android:gravity="center"
                android:background="@color/bg_color_first"
                android:textAppearance="?android:textAppearanceListItem"
                android:text="第417期“相约博学堂”之人文讲座预告"
                android:textColor="@color/white" />

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 讲座主题 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="讲座主题"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红楼梦——艺术思维与人物赏析"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 主讲人 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="主讲人"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="易栋 武汉大学艺术学院教师"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 讲座时间 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="讲座时间"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="2014年5月9日（周五）晚19：00"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 讲座地点 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="讲座地点"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大学生活动中心博学堂"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 主办单位 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_holder1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="主办单位"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_holder1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="学生工作部"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 承办单位 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_holder2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="承办单位"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_holder2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="校学生工作助理办公室"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 主讲内容提要 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="主讲内容提要"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:singleLine="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text=" 1.概述《红楼梦》的“奇书”特征和魅力\n 2.评说《红楼梦》的艺术基调、整体结构和寓意\n 3.解析贾宝玉、林黛玉、薛宝钗、妙玉的性格特点。"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

            <!-- 主讲人简介 -->
            <LinearLayout
                android:id="@+id/ll_bxt_news_speaker_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="主讲人简介"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/bg_color_first" />

                <TextView
                    android:id="@+id/tv_bxt_news_speaker_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:autoLink="web|phone"
                    android:lineSpacingMultiplier="1.4"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="易栋 武汉大学艺术学院青年教师、湖北艺术研究所特约研究员，湖北省优秀教师、武汉大学十佳教师及最受欢迎的公选课老师"
                    android:textColor="@color/text_color_normal" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
