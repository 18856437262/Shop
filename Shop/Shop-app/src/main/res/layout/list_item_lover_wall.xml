<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAF0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_boy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="高富帅"
            android:textColor="#1E90FF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="指数52"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_girl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="白富美"
            android:textColor="#FF1493"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_lover_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#FFFAF0"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="蜜语： 你是我心中的一个爱人我真的不是你的, 希望再下一个街角依旧遇见你"
        android:textColor="#696969"
        android:textSize="14sp" >

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFAF0"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_count_zyq"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="14"
            android:textColor="#FF8C00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_count_wqj"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="12"
            android:textColor="#FF8C00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_count_dbc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="10"
            android:textColor="#FF8C00"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:background="#FFFAF0" >

        <Button
            android:id="@+id/btn_zyq"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#FF8C00"
            android:text="在一起"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"
            android:background="#FF8C00"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_wqj"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#FF8C00"
            android:text="挖墙脚"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_dbc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#FF8C00"
            android:text="丢白菜"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>