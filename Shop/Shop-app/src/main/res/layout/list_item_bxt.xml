<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <!-- 讲坛标题 -->

            <TextView
                android:id="@+id/tv_bxt_news_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="湖北工业大学第170期大学生“求索”科技讲坛预告"/>


            <TextView
                android:id="@+id/tv_bxt_news_item_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/tv_bxt_news_item_title"
                android:text="探寻汉字的灵性,延续文化的魅力"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/bg_color_first"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:layout_below="@id/tv_bxt_news_item_subject" >

                <ImageView
                    android:id="@+id/img_holder"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_bxt_news_host"
                    android:contentDescription="BXT News Host"/>

                <TextView
                    android:id="@+id/tv_bxt_news_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_holder"
                    android:layout_alignTop="@id/img_holder"
                    android:layout_alignBottom="@id/img_holder"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:typeface="monospace"
                    android:textColor="#696969"
                    android:text="科技与产业处、轻工学部"/>

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/img_holder"
                    android:src="@drawable/ic_bxt_news_location"
                    android:contentDescription="BXT News Host"/>

                <TextView
                    android:id="@+id/tv_bxt_news_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_location"
                    android:layout_alignTop="@id/img_location"
                    android:layout_alignBottom="@id/img_location"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    android:typeface="monospace"
                    android:text="科技楼二楼报告厅"/>

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/img_location"
                    android:src="@drawable/ic_bxt_news_time"
                    android:contentDescription="BXT News Host"/>

                <TextView
                    android:id="@+id/tv_bxt_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_time"
                    android:layout_alignTop="@id/img_time"
                    android:layout_alignBottom="@id/img_time"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    android:typeface="monospace"
                    android:text="2014年9月26日 星期五 上午10:00"/>

            </RelativeLayout>


            <!-- 标签 -->
            <TextView
                android:id="@+id/tv_bxt_news_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:background="@drawable/shape_radius_square"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="已结束"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
