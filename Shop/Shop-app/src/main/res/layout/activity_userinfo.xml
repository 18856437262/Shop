<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">


    <!--<com.stone.shop.view.TitleBarView-->
        <!--android:id="@+id/titlebar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--stonekity:titleText="@string/title_activity_user_info"-->
        <!--stonekity:leftBtnText="@string/text_btn_back"></com.stone.shop.view.TitleBarView>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_user_info_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_app_512"
            app:border_width="1dp"
            app:border_color="#FFFFFF" />

        <TextView
            android:id="@+id/tv_user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_below="@id/img_user_info_icon" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/divide_15_top_bottom"
        android:orientation="vertical">

        <!-- 详细资料 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_light"
                android:text="@string/hint_text_no_right_look_user_info" />

        </LinearLayout>



        <!-- 付费  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_user_info_pay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/btn_text_pay"
                android:textColor="@color/text_color_white"
                android:background="@drawable/selector_bg_btn" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
